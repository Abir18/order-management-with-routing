<mvc:View
	controllerName="sap.test.routing.controller.Detail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	displayBlock="true"
>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%"
	>
		<FlexBox
			alignItems="End"
			justifyContent="End"
		>
			<items>
				<Button
					id="cancel_button"
					icon="sap-icon://decline"
					type="Accept"
					press=".onCancelPressed"
				/>
			</items>
		</FlexBox>
		<f:Form
			id="detail_form"
			editable="true"
		>
			<f:title>
				<core:Title text="{i18n>addForm}"/>
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="1"
					singleContainerFullSize="false"
				/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="{i18n>orderNo}">
							<f:fields>
								<Input
									id="app_input_orderno"
									value=""
									enabled="{oSaveModel>/saveMode}"
								/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>customerName}">
							<f:fields>
								<Input
									id="app_input_customername"
									value=""
									showValueHelp="true"
									valueHelpOnly="true"
									valueHelpRequest="handleValueHelp"
									width="100%"
									class="sapUiSmallMarginBottom"
								/>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<FlexBox>
								<items>
									<FlexBox
										id="countryFlexBox"
										direction="Column"
										width="100%"
										class="sapUiTinyMarginEnd"
									>
										<Label
											id="app_label_country"
											text="{i18n>country}"
											labelFor="app_input_country"
										/>
										<Select
											width="100%"
											id="app_input_country"
											selectedKey=""
											items="{countries>/}"
											change="onCountryChange"
											forceSelection="false"
										>
											<items>
												<core:Item
													key="{countries>countryName}"
													text="{countries>countryName}"
												/>
											</items>
										</Select>
									</FlexBox>
									<FlexBox
										id="cityFlexBox"
										direction="Column"
										width="100%"
									>
										<Label
											id="app_label_city"
											text="{i18n>city}"
											labelFor="app_input_city"
										/>
										<Select
											width="100%"
											id="app_input_city"
											selectedKey=""
											items="{cityName>/cities}"
											forceSelection="false"
										>
											<items>
												<core:Item
													key="{cityName>}"
													text="{cityName>}"
												/>
											</items>
										</Select>
									</FlexBox>
								</items>
							</FlexBox>
						</f:FormElement>
						<f:FormElement label="{i18n>date}">
							<f:fields>
								<DatePicker
									id="app_input_date"
									class="sapUiSmallMarginBottom"
								/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<FlexBox
			alignItems="Center"
			id="app_submit"
			direction="Column"
			width="100%"
		>
			<Button
				id="app_new_btn"
				text="{i18n>submit}"
				press="onSavePressed"
				visible="{oSaveModel>/saveMode}"
			/>
		</FlexBox>
	</l:VerticalLayout>
</mvc:View>