<mvc:View
	controllerName="sap.test.routing.controller.Master"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:m="sap.m"
	height="100%"
>
	<m:Page
		showHeader="false"
		enableScrolling="false"
		class="sapUiContentPadding"
	>
		<m:content>
			<Table
				rows="{products>/ProductCollection}"
				selectionMode="Single"
				ariaLabelledBy="title"
			>
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title
							id="title"
							text="{i18n>order}"
						/>
						<m:ToolbarSpacer/>
						<m:HBox>
							<m:Button
								text="{i18n>new}"
								press="onListItemPress"
							/>
						</m:HBox>
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column
						width="11rem"
						filterProperty="OrderId"
						hAlign="Center"
					>
						<m:Label text="{i18n>orderNo}."/>
						<template>
							<m:Text
								text="{products>OrderId}"
								wrapping="false"
							/>
						</template>
					</Column>
					<Column
						width="19rem"
						hAlign="Center"
						filterProperty="CustomerName"
					>
						<m:Label text="{i18n>customerName}"/>
						<template>
							<m:Text
								text="{products>CustomerName}"
								wrapping="false"
							/>
						</template>
					</Column>
					<Column
						width="20rem"
						hAlign="Center"
						filterProperty="Address"
					>
						<m:Label text="{i18n>address}"/>
						<template>
							<m:Text text="{products>Address}"/>
						</template>
					</Column>
					<Column
						hAlign="Center"
						filterProperty="Date"
					>
						<m:Label text="{i18n>orderdate}"/>
						<template>
							<m:Label text="{products>Date}"/>
						</template>
					</Column>
					<Column
						width="9rem"
						hAlign="Center"
					>
						<m:Label text="{i18n>status}"/>
						<template>
							<core:Icon
								press="onStatusChanged(${products>OrderId}, ${products>Delivered})"
								src="{= ${products>Delivered} ? 'sap-icon://accept' : 'sap-icon://decline'}"
							/>
						</template>
					</Column>
					<Column
						hAlign="Center"
						width="12rem"
					>
						<m:Label text="{i18n>action}"/>
						<template>
							<m:Button
								press="onDeleteButtonPressed(${products>OrderId})"
								visible="{= ${products>Delivered} ? false : true}"
								icon="{= ${products>Delivered} ? '' : 'sap-icon://delete'}"
								type="Reject"
							/>
						</template>
					</Column>
					<Column
						hAlign="Center"
						width="6rem"
					>
						<template>
							<core:Icon
								src="sap-icon://navigation-right-arrow"
								press="onListItemPress"
							/>
						</template>
					</Column>
					<Column>
						<m:Label text="Action2"/>
						<m:HBox>
							<m:Button icon="sap-icon://navigation-right-arrow"/>
							<core:Icon src="sap-icon://feeder-arrow"/>
						</m:HBox>
					</Column>
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>